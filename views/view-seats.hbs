<div class="container mt-5">
    <h2 class="text-center text-deep-red">Computer Lab Seat Availability</h2>

    <div class="mb-3">
        <label for="building-select" class="form-label">Choose a Building:</label>
        <select id="building-select" class="form-select">
            <option value="" selected disabled>Select a building</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="room-select" class="form-label">Choose a Room:</label>
        <select id="room-select" class="form-select" disabled>
            <option value="" selected disabled>Select a room</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="date-select" class="form-label">Choose a Date:</label>
        <select id="date-select" class="form-select">
            <option value="" selected disabled>Select a date</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="start-time-select" class="form-label">Choose a Start Time:</label>
        <select id="start-time-select" class="form-select" disabled>
            <option value="" selected disabled>Select a start time</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="end-time-select" class="form-label">Choose an End Time:</label>
        <select id="end-time-select" class="form-select" disabled>
            <option value="" selected disabled>Select an end time</option>
        </select>
    </div>

    <div class="text-center">
        <button id="view-seats-btn" class="btn btn-primary" disabled>View Available Lab Seats</button>
    </div>

        <!-- Seat selection (hidden initially) -->
    <div class="mt-4" id="seat-selection" style="display: none;">
        <h4>Select a Seat</h4>
        <select id="seat-select" class="form-select">
            <option value="" selected disabled>Select a seat</option>
        </select>
    </div>

    <!-- Available time slots for the selected seat -->
    <div class="mt-4" id="seat-times" style="display: none;">
        <h4>Available Time Slots</h4>
        <ul id="seat-time-list" class="list-group"></ul>
    </div>
</div>
<script>
    window.labsData = {{{ json labs }}};
</script>
<script src="/public/js/viewSeatsScripts.js"></script>