<body class="d-flex flex-column min-vh-100">

<section id="get-started" class="content-section flex-grow-1 d-flex flex-column justify-content-center">
    <div class="container mt-3">
        <!-- Tabs -->
        <ul class="nav nav-tabs" id="reservationTabs">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#upcoming">Upcoming Reservations</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#past">Past Reservations</a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content mt-3">
            <!-- Upcoming Reservations -->
            <div class="tab-pane fade show active" id="upcoming">
                <table class="table table-bordered table-hover">
                    <thead class="table-primary">
                    <tr>
                        <th>Reservation ID</th>
                        <th>Lab Name</th>
                        <th>Lab Slot/s</th>
                        <th>Start Date & Time</th>
                        <th>End Date & Time</th>
                        <th>Requesterâ€™s Name</th>
                        <th>Reserversâ€™ Names</th>
                        <th>Purpose</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if upcomingReservations.length}}
                        {{#each upcomingReservations}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.lab_name}}</td>
                                <td>{{this.slots}}</td>
                                <td>{{this.start_datetime}}</td>
                                <td>{{this.end_datetime}}</td>
                                <td>{{this.requester_name}}</td>
                                <td>{{this.reservers}}</td>
                                <td>{{this.purpose}}</td>
                                <td><span class="badge bg-success">Reserved</span></td>
                                <td>
                                    <a href="/edit-reservations/{{this.id}}">
                                        <button class="btn btn-warning btn-sm">Edit</button>
                                    </a>
                                    <button class="btn btn-danger btn-sm" onclick="cancelReservation('{{this.id}}')">Cancel</button>
                                </td>
                            </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            <td colspan="10" class="text-center">No upcoming reservations found.</td>
                        </tr>
                    {{/if}}
                    </tbody>
                </table>
            </div>

            <!-- Past Reservations -->
            <div class="tab-pane fade" id="past">
                <table class="table table-bordered table-hover">
                    <thead class="table-secondary">
                    <tr>
                        <th>Reservation ID</th>
                        <th>Lab Name</th>
                        <th>Lab Slot/s</th>
                        <th>Start Date & Time</th>
                        <th>End Date & Time</th>
                        <th>Requesterâ€™s Name</th>
                        <th>Reserversâ€™ Names</th>
                        <th>Purpose</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if pastReservations.length}}
                        {{#each pastReservations}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.lab_name}}</td>
                                <td>{{this.slots}}</td>
                                <td>{{this.start_datetime}}</td>
                                <td>{{this.end_datetime}}</td>
                                <td>{{this.requester_name}}</td>
                                <td>{{this.reservers}}</td>
                                <td>{{this.purpose}}</td>
                                <td><span class="badge bg-secondary">Completed</span></td>
                            </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            <td colspan="9" class="text-center">No past reservations found.</td>
                        </tr>
                    {{/if}}
                    </tbody>
                </table>
            </div>

            <!-- Reserve Lab Button -->
            <div class="text-center mt-4">
                <a href="manage-reservations/create" class="btn btn-primary btn-lg"> ðŸ“… Make a Reservation </a>
            </div>
        </div>
    </div>
</section>

</body>
